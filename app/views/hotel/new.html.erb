<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Hotel</title>
    <!-- Bootstrap CSS -->
</head>
<body>

<div class="container mt-5">
    <h2 class="text-center">Add Hotel</h2>

    <%= form_tag add_hotel_path(@hotel), method: :post, class: 'form-horizontal' do %>
                <div class="mt-5 form-group row">
                    <%= label_tag :hotel_name, "HOTEL NAME :", class: 'col-sm-2 col-form-label' %>
                    <div class="col-sm-10">
                        <%= text_field_tag :name, nil, class: "form-control", id: "hotel_name", placeholder: "Hotel Name" %>
                    </div>
                </div>
                <div class="form-group row">
                    <%= label_tag :hotel_location, "HOTEL LOCATION :", class: 'col-sm-2 col-form-label' %>
                    <div class="col-sm-10">
                        <%= text_field_tag :location, nil, class: "form-control", id: "hotel_location", placeholder: "Hotel Location" %>
                    </div>
                </div>
                <div class="form-group row">
                    <%= label_tag :hotel_rating, "HOTEL RATING :", class: 'col-sm-2 col-form-label' %>
                    <div class="col-sm-10">
                        <%= text_field_tag :rating, nil, class: "form-control", id: "hotel_rating", placeholder: "Hotel Rating" %>
                    </div>
                </div>
                <div class="form-group row">
                    <%= label_tag :available_rooms, "AVAILABLE ROOMS :", class: 'col-sm-2 col-form-label' %>
                    <div class="col-sm-10">
                        <%= text_field_tag :available_rooms, nil, class: "form-control", id: "available_rooms", placeholder: "Available Rooms" %>
                    </div>
                </div>

                <div class="form-group row">
                    <%= label_tag :hotel_ticket_price, "PRICE PER NIGHT:", class: 'col-sm-2 col-form-label' %>
                    <div class="col-sm-10">
                        <%= number_field_tag :price_per_night, nil, class: "form-control", id: "price_per_night", placeholder: "Price per Night" %>
                    </div>
                </div>
                <div class="form-group row mt-4">
                    <div class="col-sm-10 offset-sm-2">
                        <%= submit_tag 'Add Hotel', class: 'btn btn-success' %>
                        <%= link_to 'Cancel', show_hotel_index_path, class: 'ml-2 btn btn-danger' %>
                    </div>
                </div>
            </div>
        <% end %> 
    </div>

</body>
</html> 

